# =============================================================================
# Required Environment Variables (Must be set)
# =============================================================================

# Backend API server base URL (e.g., http://localhost:8080)
NEXT_PUBLIC_API_BASE_URL=backend_api_server_url

# Application name
NEXT_PUBLIC_APP_NAME=application_name

# =============================================================================
# Optional Environment Variables
# =============================================================================

# Frontend application URL (for deployment)
NEXT_PUBLIC_APP_URL=frontend_application_url

# Application version (semver format: x.y.z)
NEXT_PUBLIC_APP_VERSION=application_version

# Environment type (development, production, test)
NODE_ENV=environment_type

# Log level (debug, info, warn, error)
LOG_LEVEL=log_level

# Enable analytics tools (true/false)
ENABLE_ANALYTICS=analytics_enabled

# Default timeout in milliseconds
DEFAULT_TIMEOUT=api_request_timeout

# =============================================================================
# Authentication (for NextAuth.js)
# =============================================================================

# NextAuth URL
NEXTAUTH_URL=nextauth_url

# NextAuth secret key (32+ characters recommended)
NEXTAUTH_SECRET=nextauth_secret_key

# =============================================================================
# External Service API Keys (Optional)
# =============================================================================

# Google Analytics ID
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=google_analytics_id

# Sentry DSN
NEXT_PUBLIC_SENTRY_DSN=sentry_dsn

# =============================================================================
# Usage Instructions
# =============================================================================
# 1. Copy this file to create .env.local
# 2. Replace each variable description with actual values
# 3. Variables with NEXT_PUBLIC_ prefix are accessible on the client-side
# 4. Do not use NEXT_PUBLIC_ prefix for sensitive information